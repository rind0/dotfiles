" 環境設定
set clipboard=unnamedplus               " ヤンクをクリップボードにコピー
set encoding=utf-8                      " 文字コード
set mouse=a                             " マウスの入力を受け付ける
set shellslash                          " Windowsでもパスの区切りを/にする
set nobackup                            " バックアップを作成しない
set updatetime=300                      " スワップを作るまでの時間
